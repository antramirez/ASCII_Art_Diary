<h3>artworks</h3>
<form action="/" method="GET">
  Filter by a tag: <input type="text" name="tag" value="">
  <input type="submit" value="Filter">
</form>
<ul>
{{#each artWork as |a|}}
<li>
  <h4>{{a.date}} {{a.title}}</h4>
  <pre>{{a.artwork}}</pre>
  tags: {{#each a.tags as |tag|}}
    <a href='/?tag={{tag}}'>{{tag}}</a>
    {{/each}}
</li>
{{/each}}
</ul>
